{
  "tasks": {
    "dev": "deno run -A npm:vite",
    "server": "deno run -A --watch server.js",
    "build": "deno run -A npm:vite build",
    "preview": "deno run -A npm:vite preview"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "fmt": {
    "lineWidth": 120,
    "singleQuote": true,
    "semiColons": false,
    "indentWidth": 2,
    "proseWrap": "preserve"
  },
  "exclude": [
    "node_modules",
    "vendor",
    "dist"
  ]
}
